        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="470.728">
    <Grid Background="#FF35BDB7">

        <Label Content="Username:" HorizontalAlignment="Left" Margin="15,63,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="18,125,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUname" HorizontalAlignment="Left" Height="51" Margin="99,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"/>
        <PasswordBox x:Name="pwdPassword" HorizontalAlignment="Left" Margin="99,125,0,0" VerticalAlignment="Top" Width="142" Height="52"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="72,218,0,0" VerticalAlignment="Top" Width="98" Click="btnLogin_Click" Height="47"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="186,218,0,0" VerticalAlignment="Top" Width="96" Click="btnClear_Click" Height="47"/>
        <Label Content="Holiday Entitlement" HorizontalAlignment="Left" Margin="141,10,-41,0" VerticalAlignment="Top" Width="363" FontSize="20" Background="{x:Null}" Foreground="Black"/>
        <Image Margin="311,181,10,10" Source="Gorilla Enterprise.png" Stretch="Fill"/>

    </Grid>
</Window>
